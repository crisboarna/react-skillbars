{
  "name": "react-skillbars",
  "version": "1.6.1",
  "description": "React NPM library containing skill bars with full color customizations and responsive layout.",
  "author": "Cristian Boarna <contact@crisboarna.com>",
  "license": "MIT",
  "private": true,
  "workspaces": ["packages/*"],
  "homepage": "https://crisboarna.github.io/react-skillbars",
  "repository": {
    "type": "git",
    "url": "https://github.com/crisboarna/react-skillbars.git"
  },
  "bugs": {
    "url": "https://github.com/crisboarna/react-skillbars/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lib:lint": "yarn workspace react-skillbars lint",
    "lib:test": "yarn workspace react-skillbars test",
    "lib:build": "yarn workspace react-skillbars build",
    "docs:start": "yarn workspace docs start",
    "docs:build": "yarn workspace docs build",
    "docs:serve": "yarn workspace docs serve",
    "docs:deploy": "yarn workspace docs deploy"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^16.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1"
  }
}
